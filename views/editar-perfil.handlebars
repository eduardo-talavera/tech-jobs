<main class="contenedor">
    <form action="/editar-perfil" method="POST" class="default-form" enctype="multipart/form-data">
        <div class="campo">
            <label for="nombre">Nombre</label>
            <input type="text" name="nombre" id="nombre" placeholder="Nuevo Nombre" value="{{usuario.nombre}}" >
        </div>
        <div class="campo">
            <label for="email">E-mail</label>
            <input type="email" name="email" id="email" placeholder="Nuevo Email" value="{{usuario.email}}" >
        </div>
        <div class="campo">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" placeholder="Nuevo Password">
        </div>
        <div class="campo">
            <label>Imagen</label>
            <input type="file"
                   name="imagen"
                   placeholder="Tu imagen de perfil"   
                   {{!-- accept="image/png, image/jpeg" --}}
                >
                 <div class="img-box img-edit-perfil" 
                    style="background-image:url(/uploads/perfiles/{{usuario.imagen}});"></div>    

        </div>
        <div class="campo">
            <input type="submit" class="btn btn-azul" value="Guardar Cambios">
        </div>
    </form>
</main>